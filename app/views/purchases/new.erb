<header>
		<h1>Acme Credit Purchase</h1>
</header>

<nav>
  <ul>
    <li><a href="/purchase">Make a new purchase</a></li><br>
    <li><a href="/purchases">Show all purchases</a></li><br>
    <li><a href="/logout">Log out</a></li>
  </ul>
</nav>

<article>
  <p>Customer: <strong><%= @user.name %></strong></p>
	<% if flash.has?(:message) %>
		<font color="red">
			<%= flash[:message] %><br>
		</font>
	<% end %>
  <form method="post" action="/purchase">
    <% (0..2).each do |i| %>
      <p>
      Item:
      <select name="select_item_<%= i %>">
        <option value="0"></option>
        <% Item.all.each do |item| %>
          <option value="<%= item.id %>"><%= item.name %></option>
        <% end %>
      </select>
      Quantity: <input type="number" name="quantity_<%= i %>">
      Price: <input type="number" step="0.01" name="price_<%= i %>">
      </p>
    <% end %>
    <p><input type="submit" value="Purchase"></p>
  </form>
</article>
