<h3>Acme Credit Purchase</h3>

<h3>Acme Credit Purchases</h3>

<p>Customer: <%= @user.name %></p>
<table>
  <tr>
    <td>Transaction #: <%= @purchase.id %></td>
    <td><%= @purchase.created_at.to_time.getlocal("-05:00").asctime %></td>
  </tr>
</table>
  <% @purchase.purchase_items.each do |purchase_item| %>
    <table border="1px solid #dddddd" style="text-align: center;">
      <tr>
        <th>Item</th>
        <th>Price</th>
        <th>Quantity</th>
      </tr>
      <tr>
        <td><%= purchase_item.item.name %></td>
        <td><%= purchase_item.sale_price %></td>
        <td><%= purchase_item.quantity %></td>
      </tr>
    </table>
  <% end %>

<p><a href="/purchase">Make a new purchase</a></p>
<p><a href="/logout">Log out</a></p>
