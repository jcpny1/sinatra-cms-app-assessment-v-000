<h3>Acme Credit Purchases</h3>

<p>for: <%= @user.name %></p>
<% @purchases.each do |purchase| %>
  <table id="noborder">
    <tr>
      <td>Transaction #: <%= purchase.id %></td>
      <td id="timestamp"><%= purchase.created_at.to_time.getlocal("-05:00").asctime %></td>
    </tr>
  </table>
  <table>
    <tr>
      <th>Category</th>
      <th>Item</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
    <% purchase.purchase_items.each do |purchase_item| %>
      <tr>
        <td><%= purchase_item.item.category.name %></td>
        <td><%= purchase_item.item.name %></td>
        <td><%= purchase_item.quantity %></td>
        <td style="text-align: right"><%= format("%.2f", purchase_item.sale_price) %></td>
      </tr>
    <% end %>
  </table>
  <br>
<% end %>

<p><a href="/purchase">Make a new purchase</a></p>
<p><a href="/purchases">Show all purchases</a></p>
<p><a href="/logout">Log out</a></p>
